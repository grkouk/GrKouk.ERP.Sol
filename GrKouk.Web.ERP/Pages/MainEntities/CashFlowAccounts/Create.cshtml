@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}
@section MyCss
{
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/bootstrap4.css" />
    
}
<h4>Create Transactor</h4>
<hr />
<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <input type="hidden" asp-for="ItemVm.SelectedCompanies" />
        <div class="form-row ">
            <div class="form-group col-md-2">
                <label asp-for="ItemVm.Code" class="control-label small"></label>
                <input asp-for="ItemVm.Code" class="form-control form-control-sm" />
                <span asp-validation-for="ItemVm.Code" class="text-danger small"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ItemVm.Name" class="form-control-label small"></label>
                <input asp-for="ItemVm.Name" class="form-control form-control-sm" />
                <span asp-validation-for="ItemVm.Name" class="text-danger small"></span>
            </div>
            
            <div class=" form-group col-md-2">
                <label class="form-control-label small">Selected Companies</label>
                <select class="selectpicker form-control " id="SelectedCompanies" multiple
                        data-selected-text-format="count > 2"></select>
            </div>
            <div class=" form-group col-md-2">
                <label class="form-control-label small">New Selected Comp</label>
                <ejs-multiselect id="test" dataSource="@ViewBag.CompaniesListJs" placeholder="Select Companies" mode="CheckBox"
                                 showDropDownIcon="true" 
                                 showSelectAll="true" selectAllText="Select All" unSelectAllText="unSelect All"
                                 >
                    <e-multiselect-fields text="Title" value="Value"></e-multiselect-fields>
                </ejs-multiselect>
            </div>
          
        </div>
       
        <div class="form-row">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </form>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <ejs-scripts></ejs-scripts>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script>
        $(document).ready(function() {
          
            const selectedCompanies = document.getElementById("SelectedCompanies").ej2_instances[0];
            selectedCompanies.changeOnBlur=false;
            selectedCompanies.addEventListener("change",(event)=>{
              
                var selected = JSON.stringify(event.value);
                $('#ItemVm_SelectedCompanies').val(selected);
            });
           
        });
    </script>
}
